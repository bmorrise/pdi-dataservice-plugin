<overlay xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
    <tabs id="opt_tabs">
        <tab label="Service Cache" position="1"/>
    </tabs>
    <tabpanels id="opt_panels">
        <tabpanel position="1">
            <vbox padding="10">
            <hbox>
                <checkbox id="service-cache-checkbox" label="Enable Caching"/>
            </hbox>
            <hbox>
                <label control="service-cache-ttl" value="Cache Duration (seconds):"/>
                <textbox id="service-cache-ttl" width="50" />
            </hbox>
            </vbox>
        </tabpanel>
    </tabpanels>
</overlay>

